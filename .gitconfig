[core]
  editor = vim
  excludefile = ~/.gitignore
  excludesfile = \"$HOME\"/.gitignore_global

[user]
  name = mogulla3
  email = hs.iarn3@gmail.com

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  grep = auto

[alias]
  s = status
  br = branch
  co = checkout
  c = commit
  l = log --oneline --graph --decorate
  d = diff
  a = add

[merge]
  ff = only

[status]
  showUntrackedFiles = all

[init]
  templatedir = ~/.git_template/
